{
  "name": "plants-vs-zombies-redis",
  "version": "1.0.0",
  "description": "A multiplayer Plants vs Zombies tower defense game showcasing Redis as a multi-model platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "demo": "node demo.js",
    "deploy": "./deploy-cleanup.sh && npm install --production",
    "redis-check": "redis-cli ping || echo 'Redis not running. Please start Redis server.'",
    "logs": "tail -f logs/server.log",
    "backup": "mkdir -p backups && redis-cli --rdb backups/redis-backup-$(date +%Y%m%d-%H%M%S).rdb",
    "health-check": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "keywords": [
    "plants-vs-zombies",
    "redis",
    "multiplayer",
    "tower-defense",
    "websockets",
    "real-time",
    "leaderboard",
    "gaming",
    "multi-model",
    "database"
  ],
  "author": "Plants vs Zombies Redis Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "socket.io-client": "^4.8.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/plants-vs-zombies-redis.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/plants-vs-zombies-redis/issues"
  },
  "homepage": "https://github.com/your-username/plants-vs-zombies-redis#readme"
}
